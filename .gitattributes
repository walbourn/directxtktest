# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare code/VS files as CRLF
*.cpp eol=crlf
*.h eol=crlf
*.hlsl eol=crlf
*.hlsli eol=crlf
*.fx eol=crlf
*.fxh eol=crlf
*.inc eol=crlf
*.inl eol=crlf
*.vcxproj eol=crlf
*.filters eol=crlf
*.sln eol=crlf
*.appxmanifest eol=crlf

# Explicitly declare resource files as binary
*.pdb binary
*.bmp binary
*.dds binary
*.jpg binary
*.png binary
*.cmo binary
*.cso binary
*.sdkmesh binary
*.sdkmesh_anim binary
*.spritefont binary
*.wav binary
*.xwb binary
*.wma binary
